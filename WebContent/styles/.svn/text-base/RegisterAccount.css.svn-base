/* *** */
html, body, img, form { margin: 0; padding: 0; border: 0 none; }
body { background: #FFFFFF; font-family: Verdana, Tahoma, sans-serif; font-size: 13px; color: #222; text-shadow: #fff 0 1px 0; }
a { color: #000; text-decoration: none; }
a:hover { text-decoration: underline; }
.clear { clear: both; }
p { line-height: 1.2em; margin: 8px 0 3px 0; padding: 0; }

/* *** */
#login { margin-top: 100px; }
#login .register-bg { height: 360px; background: url(../images/login/login_mid_bg.jpg) repeat-x top center; }
#login .register-main { margin: auto; height: 100%; width: 1000px; background: url(../images/login/register_page_bg.jpg) no-repeat top center; }
#login .footer { margin: 20px 0; text-align: center; }

/* input text fields and button */
#register-form { position: relative; top: 145px; left: 570px; height: 170px; width: 340px; }
#register-form th, #register-form td { height: 40px; }
#register-form th { width: 90px; font-size: 14px; font-weight: bold; }
#register-form .input-text-long { width: 200px; height: 25px; }
#register-form .input-text-verfiycode { width: 60px; height: 25px; }
#register-form .input-btn-login { width: 100px; height: 32px; background: url(../images/login/login_btn.gif) no-repeat; border: none; padding: 0; margin:0; color: #FFFFFF; font-size: 14px; font-weight: bold; }
#register-form .table-btn1 { height: 45px; text-align: right; }
#register-form .table-btn2 { height: 45px; text-align: right; }
#register-form .img-verfiycode { height: 25px; width: 70px; }

/* *** */
#head .title { height: 90px; background: url(../images/common/head_bg.jpg) no-repeat #0465B6; border-bottom: 1px #000 solid; border-top: 1px #000 solid; }
#head .nav-bg { height: 40px; background: url(../images/common/navbar_bg.gif) repeat-x; }
#head .title h1 { position: relative; top: 30px; left: 80px; width: 500px; margin: 0; padding: 0;  font-size: 30px; font-weight: bold; color: #FFF; text-shadow: #333 0 1px 0; }
#head .navbar { margin: 0 25px 0 25px; padding-left: 35px; line-height: 40px;  background: url(../images/common/nav_arrow.gif) no-repeat left; }
#head .navbar .nav { float: left; }
#head .navbar .user-ctrl { float: right; }

#main { border-left: 1px #CCC solid; border-right: 1px #CCC solid;  min-height: 600px; }
#main .sidebar { float: left; width: 200px; border-right: 1px #CCC solid; border-bottom: 1px #CCC solid; min-height: 600px; background: #F5F7F7; }
#ctrl-panel .item {  }
#ctrl-panel .item h3 { margin: 5px 0 0 0; padding: 5px 0 0 10px; line-height: 24px; border-bottom: 1px #CCC solid; cursor: pointer; font-size: 15px; }
#ctrl-panel .item h3 .icon { width: 20px; height: 20px; display:block; float: left; background-position: center; background-repeat: no-repeat; margin-right: 3px; }
#ctrl-panel .item ul { margin: 0 0 5px 0; padding: 0; border-top: 1px #FFF solid; list-style: none; }
#ctrl-panel .item ul li a { display:block; height: 28px; line-height: 28px; padding-left: 35px; }
#ctrl-panel .item ul li a:hover { height: 26px; line-height: 26px; background-color: #FFF; border-top: 1px solid #CCC; border-bottom: 1px solid #CCC; text-decoration: none; }

#main .content { margin-left: 205px;  }
#main .content .findbox { margin: 0 20px 20px 10px; padding: 10px; background-color: #F5F7F7; border: 1px dashed #CCCCCC; }
#main .content .formbox { margin-bottom: 5px; padding: 5px 10px 0 10px; }
#main .content .formbox table { background: none repeat scroll 0 0 #FFFFFF; border: 1px solid #CCCCCC; }
#main .content .formbox .title { background-color: #F5F7F7; border: 1px dashed #CCCCCC; color: #000000; font-size: 12px; font-weight: bold; padding: 5px; text-align: center; }
#main .content .formbox td { padding: 5px; }
#main .content .datagrid { margin-bottom: 5px; padding: 5px 10px 0 10px; }
#main .content .datagrid table { background: none repeat scroll 0 0 #FFFFFF; border: 1px solid #CCCCCC; border-collapse: collapse; }
#main .content .datagrid table th { background-color: #F5F7F7; color: #000000; font-size: 12px; font-weight: bold; padding: 5px; text-align: center; border: 1px solid #CCCCCC;  }
#main .content .datagrid table td { border: 1px solid #CCCCCC; padding: 5px; }
#main .content .formarea { margin-bottom: 5px; padding: 20px; }
#main .content .formarea h3 { font-size: 20px; font-weight: bold; margin: 5px 0 20px 0; padding-left: 20px; }
#main .content .formarea table {}
#main .content .formarea th { font-weight: bold; padding: 10px; text-align: left; width: 160px; }
#main .content .formarea td { line-height: 20px; margin-bottom: 9px; padding: 8px 10px; }
#main .content .cpbar { margin: 15px 0 10px 0; }


#foot { height: 60px; padding-top: 10px; text-align: center; border-top: 1px #CCC solid; background-color: #F5F7F7; }

/* *** */
.table-diff-row { background-color: #EFEFEF; }
.table-highlight-row { background-color: #E3E3E3;  }

/* *** */
.panel-icon-plan { background-image: url(../images/icon/1.gif); }
.panel-icon-do { background-image: url(../images/icon/2.gif); }
.panel-icon-data { background-image: url(../images/icon/3.gif); }
.panel-icon-support { background-image: url(../images/icon/4.gif); }
.panel-icon-config { background-image: url(../images/icon/5.gif); }

/* *** */
textarea, input[type="text"], input[type="password"] ,select {  background-color: #FFFFFF; border-color: #CCC; border-radius: 3px 3px 3px 3px; border-style: solid; border-width: 1px; height: 24px; }
textarea { height: 60px; }
.input-long { width: 25em; }
.input-mid { width: 18em; }
.input-short { width: 15em; }
.btn { border-color: #BEBEBE #CCCCCC #CCCCCC #BEBEBE; border-right: 1px solid #CCCCCC; border-style: solid; border-width: 1px 1px 1px 4px; color: #000000; height: 22px; }

/* *** */
.pagenav { margin: 10px 0 10px 0; padding-right: 30px; text-align: right;}

/* *** */
.whiteline { display: block; height: 25px; }